<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/profile_image" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_profile"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Name:"
        android:textColor="@color/purple_700"
        android:layout_marginTop="32sp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/img_profile"
        android:textSize="16sp"
        android:text="Taha"
        android:textColor="#353535"
        android:layout_marginTop="32sp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Phone:"
        android:textColor="@color/purple_700"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/phone"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:textSize="18sp"
        android:text="01092242483"
        android:textColor="#353535"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Email:"
        android:textColor="@color/purple_700"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone"
        android:textSize="18sp"
        android:text="pro.tahayounis@gmail.com"
        android:textColor="#353535"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/account_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Account No:"
        android:textColor="@color/purple_700"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/account_no_xxxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/account_no"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        android:textSize="18sp"
        android:text="xxxx xxxx xxxx"
        android:textColor="#353535"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tv_account_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/account_no_xxxx"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        android:textSize="18sp"
        android:text="2121"
        android:textColor="#353535"
        android:layout_marginTop="12dp"
        android:layout_marginStart="6dp"/>

    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_no"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Balance:"
        android:textColor="@color/purple_700"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/balance"
        app:layout_constraintTop_toBottomOf="@+id/account_no_xxxx"
        android:textSize="18sp"
        android:text="10000"
        android:textColor="#353535"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_transfer_money"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/balance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44sp"
        android:background="@drawable/btn_transfer_bg"
        android:textColor="@color/white"
        android:text="Transfer"
        android:textAllCaps="false"
        android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>